{
  "presets": [
    "@babel/preset-env",
    [
      "@babel/preset-react",
      {
        "runtime": "automatic"
      }
    ],
    "@babel/preset-typescript"
  ],
  "plugins": [
    [
      "@babel/plugin-transform-runtime",
      {
        "regenerator": true
      }
    ],
    [
      "module-resolver",
      {
        "root": [
          "."
        ],
        "extensions": [
          ".ts",
          ".tsx"
        ],
        "alias": {
          "@api": "./src/api",
          "@components": "./src/components",
          "@state": "./src/state"
        }
      }
    ]
  ]
}